{
  "dependencies": {
    "turbo": "^1.10.15"
  },
  "workspaces": [
    "apps/*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "db:up": "npm run db:up -w server",
    "db:down": "npm run db:down -w server",
    "db:start": "npm run db:start -w server",
    "db:stop": "npm run db:stop -w server",
    "format": "prettier --write \"**/*.{ts,tsx,json,md,scss,html}\""
  },
  "devDependencies": {
    "prettier": "3.0.1",
    "typescript": "5.1.6"
  }
}
